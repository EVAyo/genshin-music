{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "webmidi"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "$cmp/*": [
        "components/*"
      ],
      "$lib/*": [
        "lib/*"
      ],
      "$pages/*": [
        "pages/*"
      ],
      "$stores/*": [
        "stores/*"
      ],
      "$types/*": [
        "types/*"
      ],
      "$i18n/*": [
        "i18n/*"
      ],
      "$img/*": [
        "assets/images/*"
      ],
      "$config": [
        "Config.ts"
      ],
      "$/*": [
        "*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "src",
    "build/types/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "src-tauri"
  ]
}
